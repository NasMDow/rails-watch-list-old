<div class="container">
 <h1>Add new bookmark to movie</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie, collection: Movie.all.order(:title), prompt: "Choose a movie"  %> 
    <%= f.input :comment %>
    <%= f.submit 'Add bookmark', class: 'btn btn-primary' %>
  <% end %>
</div>


